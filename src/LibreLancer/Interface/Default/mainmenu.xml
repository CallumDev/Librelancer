        <Panel x="42%" y = "12.8%" aspect="4/3" style="optionsframe"/>
        <Button x="70%" y="25%" aspect="4/3" text="VSync" id="vsync" style="optioncheck" onclick="handlecheck('vsync', check_vsync)"/>
