    <!--UI relating to options-->
    <Scene id="options">
        <Script><![CDATA[
        local checks = {}
        function events.onentry()
            sound:play('ui_motion_swish')
            dom:element('exit'):flyin(0,0.6)
            dom:afteranimation("sound:play('ui_window_open')")
            setchecked('vsync', options:get_vsync())
        end
        function events.onleave()
            sound:play('ui_motion_swish')
            dom:element('exit'):flyout(0,0.6)
        end
        function setchecked(id, value)
            checks[id] = value
            if checks[id] then
                dom:element(id):parts('check'):show()
            else
                dom:element(id):parts('check'):hide()
            end
        end
        -- Checkbox implementation
        function handlecheck(id, func)
            if checks[id] ~= nil then
                checks[id] = (not checks[id])
            else
                checks[id] = true
            end
            if checks[id] then
                dom:element(id):parts('check'):show()
                func(true)
            else
                dom:element(id):parts('check'):hide()
                func(false)
            end
        end
        -- Events
        function check_vsync(checked)
            options:set_vsync(checked)
        end
        ]]></Script>
