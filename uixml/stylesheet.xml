<Stylesheet>
	<!-- Generic buttons -->
	<ButtonStyle Width="16" Height="16" Name="xbutton">
		<ButtonStyle.Normal>
			<ButtonAppearance.Background>
				<DisplayModel model="xbutton" Tint="text"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover>
			<ButtonAppearance.Background>
				<DisplayModel model="xbutton" Tint="text_hover"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Hover>
	</ButtonStyle>
	<!-- Neuronet buttons -->
	<ButtonStyle Width="21" Height="21" Name="nn_info">
		<ButtonStyle.Normal>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_info.3db" Tint="text"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_info.3db" Tint="text_hover" Rotate="0.05,0,0.05" RotateAnimation="0,-3,0"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Hover>
	</ButtonStyle>
	<ButtonStyle Name="nn_playerstatus" Width="10" Height="22">
		<ButtonStyle.Normal>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_playerstatus.3db" Tint="text"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_playerstatus.3db" Tint="text_hover" Rotate="0.05,0,0.05" RotateAnimation="0,-3,0"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Hover>
	</ButtonStyle>
	<ButtonStyle Name="nn_inventory" Width ="24" Height="11">
		<ButtonStyle.Normal>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_inventory.3db" Tint="text"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_inventory.3db" Tint="text_hover" Rotate="0.05,0,0.05" RotateAnimation="0,-3,0"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Hover>
	</ButtonStyle>
	<ButtonStyle Name="nn_map" Width="23" Height="23">
		<ButtonStyle.Normal>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_map.3db" Tint="text"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_map.3db" Tint="text_hover" Rotate="0.05,0,0.05" RotateAnimation="0,-3,0"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Hover>
	</ButtonStyle>
	<ButtonStyle Name="nn_storystar" Width="22" Height="22">
		<ButtonStyle.Normal>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_storystar.3db" Tint="text"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover>
			<ButtonAppearance.Background>
				<DisplayModel model="nn_storystar.3db" Tint="text_hover" Rotate="0.05,0,0.05" RotateAnimation="0,-3,0"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Hover>
	</ButtonStyle>
	<!-- Menu -->
	<ButtonStyle Width="162" Height="43" Name="menubutton" MouseEnterSound="ui_rollover">
		<ButtonStyle.Normal TextColor="text" TextShadow="black" TextSize="16" FontFamily="$ButtonText">
			<ButtonAppearance.Background>
				<DisplayModel model="fullbutton_animating"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover TextColor="text_hover"/>
        <ButtonStyle.Disabled TextColor="#666"/>
	</ButtonStyle>
	<ButtonStyle Width="162" Height="36" Name="wirebutton" MouseEnterSound="ui_rollover">
		<ButtonStyle.Normal TextColor="text" TextShadow="black" TextSize="16" FontFamily="$ButtonText">
			<ButtonAppearance.Background>
				<DisplayWireBorder Width="4" Color="text"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Normal>
		<ButtonStyle.Hover TextColor="text_hover">
			<ButtonAppearance.Background>
				<DisplayWireBorder Width="4" Color="text_hover"/>
			</ButtonAppearance.Background>
		</ButtonStyle.Hover>
        <ButtonStyle.Disabled TextColor="#666"/>
	</ButtonStyle>
	<ScrollbarStyle Width="16" TrackMarginY="4" ButtonMarginX="2">
		<ScrollbarStyle.UpButton Height="12">
			<ButtonStyle.Normal>
				<ButtonAppearance.Background>
					<DisplayImage image="sliderarrow_up" tint="text"/>
				</ButtonAppearance.Background>
			</ButtonStyle.Normal>
			<ButtonStyle.Hover>
				<ButtonAppearance.Background>
					<DisplayImage image="sliderarrow_up" tint="slow_blue_yellow"/>
				</ButtonAppearance.Background>
			</ButtonStyle.Hover>
		</ScrollbarStyle.UpButton>
		<ScrollbarStyle.DownButton Height="12">
			<ButtonStyle.Normal>
				<ButtonAppearance.Background>
					<DisplayImage image="sliderarrow_down" tint="text"/>
				</ButtonAppearance.Background>
			</ButtonStyle.Normal>
			<ButtonStyle.Hover>
				<ButtonAppearance.Background>
					<DisplayImage image="sliderarrow_down" tint="slow_blue_yellow"/>
				</ButtonAppearance.Background>
			</ButtonStyle.Hover>
		</ScrollbarStyle.DownButton>
		<ScrollbarStyle.TrackArea>
			<DisplayRectangle color="text" WidthPx="1"/>
		</ScrollbarStyle.TrackArea>
		<ScrollbarStyle.Thumb Height="32">
			<ButtonStyle.Normal>
				<ButtonAppearance.Background>
					<DisplayImage image="slider_middle" tint="text"/>
				</ButtonAppearance.Background>
			</ButtonStyle.Normal>
			<ButtonStyle.Hover>
				<ButtonAppearance.Background>
					<DisplayImage image="slider_middle" tint="slow_blue_yellow"/>
				</ButtonAppearance.Background>
			</ButtonStyle.Hover>
		</ScrollbarStyle.Thumb>
	</ScrollbarStyle>
</Stylesheet>
















